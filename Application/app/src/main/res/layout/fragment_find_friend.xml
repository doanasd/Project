<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ff_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/crbg"
    tools:context=".findFriend">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
         <LinearLayout
             android:id="@+id/roomLayout"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:visibility="gone"
             android:orientation="vertical">

             <LinearLayout
                 android:layout_width="280dp"
                 android:layout_gravity="center"
                 android:layout_marginTop="30dp"
                 android:orientation="vertical"
                 android:background="@drawable/cd_board"
                 android:layout_height="100dp">
                 <TextView
                     android:id="@+id/roomName"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:paddingTop="33dp"
                     android:textColor="#EF2193"
                     android:gravity="center"
                     android:textSize="20sp"
                     android:textStyle="bold|italic"
                     android:text="">
                 </TextView>
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <TextView
                         android:id="@+id/cong"
                         android:gravity="center"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textColor="@color/grey"
                         android:textSize="16sp"
                         android:layout_weight="1"
                         android:textStyle="bold"
                         android:text="port">
                     </TextView>
                     <TextView
                         android:id="@+id/ip"
                         android:gravity="center"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textColor="@color/grey"
                         android:textSize="16sp"
                         android:layout_weight="1"
                         android:textStyle="bold"
                         android:text="ip">
                     </TextView>


                 </LinearLayout>

             </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:gravity="center"
                 android:padding="10dp"
                 android:layout_marginTop="50dp"
                 android:layout_height="wrap_content">
                 <TextView
                     android:id="@+id/state"
                     android:layout_width="200dp"
                     android:gravity="center"
                     android:background="@drawable/statelable"
                     android:layout_height="80dp"
                     android:textStyle="bold|italic"
                     android:textColor="@color/white"
                     android:textSize="20sp"
                     android:text="waiting..">

                 </TextView>
             </LinearLayout>

             <LinearLayout
                 android:layout_width="280dp"
                 android:layout_gravity="center"
                 android:background="@drawable/listbg"
                 android:layout_height="100dp">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_weight="1"
                     android:padding="14dp"
                     android:orientation="vertical"
                     android:layout_height="match_parent">
                     <ImageView
                         android:id="@+id/avt"
                         android:layout_width="60dp"
                         android:rotationY="180"
                         android:scaleType="centerCrop"
                         android:layout_gravity="center"
                         android:background="@drawable/avt"
                         android:layout_height="50dp">
                     </ImageView>
                     <TextView
                         android:id="@+id/name"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:textSize="15sp"
                         android:gravity="center"
                         android:textStyle="bold"
                         android:textColor="@color/white"
                         android:text="doanasd">

                     </TextView>
                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:gravity="end"
                     android:padding="14dp"
                     android:orientation="vertical"
                     android:layout_weight="1"
                     android:layout_height="match_parent">
                     <ImageView
                         android:id="@+id/avt2"
                         android:layout_width="60dp"
                         android:layout_gravity="center"
                         android:scaleType="centerCrop"
                         android:background="@drawable/unknown"
                         android:layout_height="50dp">
                     </ImageView>
                     <TextView
                         android:id="@+id/name2"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:gravity="center"
                         android:textSize="15sp"
                         android:textStyle="bold"
                         android:textColor="@color/white"
                         android:text="UNKNOWN?">

                     </TextView>
                 </LinearLayout>

             </LinearLayout>
             <ImageButton
                 android:id="@+id/start"
                 android:layout_width="130dp"
                 android:layout_gravity="center"
                 android:visibility="invisible"
                 android:layout_height="120dp"
                 android:background="@drawable/start">
             </ImageButton>
         </LinearLayout>
         <LinearLayout
             android:id="@+id/findLayout"
             android:layout_width="match_parent"
             android:padding="60dp"
             android:visibility="visible"
             android:layout_height="wrap_content"
             android:orientation="vertical">
             <SearchView
                 android:id="@+id/seach"
                 android:padding="10dp"
                 android:background="@drawable/radius"
                 android:layout_width="match_parent"
                 android:layout_height="50dp" />
             <EditText
                 android:id="@+id/port"
                 android:layout_width="match_parent"
                 android:background="@drawable/nobackground"
                 android:textSize="20sp"
                 android:textAlignment="center"
                 android:hint=" Port..."
                 android:textColor="#ED2213"
                 android:padding="8dp"
                 android:layout_height="wrap_content">
             </EditText>
             <androidx.recyclerview.widget.RecyclerView
                 android:id="@+id/recycleView"
                 android:layout_marginTop="20dp"
                 android:padding="5dp"
                 tools:listitem="@layout/room_item"
                 android:layout_width="match_parent"
                 android:layout_height="420dp">
             </androidx.recyclerview.widget.RecyclerView>
         </LinearLayout>
     </LinearLayout>




</FrameLayout>